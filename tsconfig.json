/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app/*": ["src/app/*"],
      "@core/*": ["src/app/core/*"],
      "@shared/*": ["src/app/shared/*"],
      "@utils/*": ["src/app/utils/*"],
      "@utils": ["src/app/utils/index"],
      "@colors/*": ["src/app/modules/colors/*"],
      "@spacing/*": ["src/app/modules/spacing/*"],
      "@typography/*": ["src/app/modules/typography/*"],
      "@shadows/*": ["src/app/modules/shadows/*"],
      "@borders/*": ["src/app/modules/borders/*"],
      "@custom-tokens/*": ["src/app/modules/custom-tokens/*"],
      "@durations/*": ["src/app/modules/durations/*"],
    }
  }
}
